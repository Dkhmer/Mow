<main class="site-content">

  <h2 class="title"><span>Go green.</span> Book unique animals <br>and experience it like a farmer.</h2>

  <section class"search-row">

    <input class="search-input" type="text" placeholder="Where to?"></input>


    <button class="search-btn"> Search </button>

  </section>

  <section class="gallery">
  <h3>Explore Mow picks</h3>
    <div class="cards">
      <% @animals.each do |animal| %>
      <div class="card">
        <% if animal.photo.attached? %>
          <div class="img"><%= cl_image_tag animal.photo.key, height: 300, width: 400, crop: :fill %></div>
          <div class="price-stamp"><%= animal.price %>$</div>
          <div class="description">
            <h4><%= link_to animal.name, animal_path(animal) %></h4>
          </div>
        <% end %>
      </div>

      <% end %>
    </div>
  </section>

</main>

