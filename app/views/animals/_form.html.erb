
<%= simple_form_for(@animal) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name , placeholder: 'Pogo, Cookies? Whatever..'%>
    <%= f.input :specie, placeholder: 'Sheep, Monkey, Dragon...' %>
    <%= f.input :description, placeholder: 'Your sheep miss a leg, an eye? Describe him !', class: "form-actions"%>
    <%= f.input :address, placeholder:'We sure that your animal has his own adress' %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary homebtn" %>
  </div>
<% end %>
