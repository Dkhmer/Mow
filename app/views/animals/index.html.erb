<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'berger.jpg' %>');">
  <div class="banner-content">
    <h1>All pets</h1>
  </div>
</div>

<div class="container">
  <div class="row">
        <% @animals.each do |animal| %>
          <div class="col-12 col-md-6 col-lg-3">
            <div class="card">
              <div class="card-description">
                <% if animal.photo.attached? %>
                  <%= cl_image_tag animal.photo.key, height: 300, width: 400, crop: :fill %>
                  <% end %>
                <%= link_to animal.name, animal_path(animal) %>
                  <% animal.doses.each do |dose| %>
                <%= dose.description %> <%= dose.ingredient.name %>
                <% end %>
              </div>
              <%= link_to "", animal_path(animal), class: 'card-link' %>
            </div>
          </div>
        <% end %>
  </div>
</div>
