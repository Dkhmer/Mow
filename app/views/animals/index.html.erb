
<div class="main-container">
  <!-- CARDS -->
  <div class="cards-container">
  <% @animals.each do |animal| %>
      <div class="card-product">
          <% if animal.photo.attached? %>
            <%= cl_image_tag animal.photo.key,crop: :fill , class: "img-card" %>
          <% end %>
        <div class="card-product-infos">
          <h2> <%= link_to animal.name, animal_path(animal) %> <p><%= animal.specie.capitalize %></p> </h2>
          <p> <%= animal.description %></p>
          <div class=footer-cards>
            <i class="fas fa-heart">4,43 <span id="number-of-note">(19)</span></i>
            <span>55â‚¬</span>
          </div>

        </div>
      </div>
    <% end %>
  </div>
  <!-- MAP -->
  <div
    id="map",
    data-markers= "<%= @markers.to_json %>"
    style = "height:100vh; width:70vh;"
    data-mapbox-api-key= <%= ENV['MAPBOX_API_KEY'] %>>

   </div>
</div>
